<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dddddd"
    tools:context=".MainActivity">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/rd_But_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0, 1" />

        <RadioButton
            android:id="@+id/rd_But_yn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ДА, НЕТ" />

        <RadioButton
            android:id="@+id/rd_But_cb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Кубик (1 - 6)" />

        <RadioButton
            android:id="@+id/rd_But_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Счёт до: " />

        <RadioButton
            android:id="@+id/rd_But_rnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Случайное число от 0 до:" />

    </RadioGroup>

    <EditText
        android:id="@+id/editText"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:background="#ffffff"
        android:ems="10"
        android:inputType="number"
        android:minHeight="48dp"
        android:paddingStart="5dp"
        android:text="10"
        android:textAlignment="viewStart"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/radioGroup"
        app:layout_constraintStart_toEndOf="@+id/radioGroup" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="50dp"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="202dp"
        android:backgroundTint="#000046"
        android:text="НАЖМИ"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_clr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:backgroundTint="#460000"
        android:text="СБРОС"
        app:layout_constraintStart_toStartOf="@+id/radioGroup"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

</androidx.constraintlayout.widget.ConstraintLayout>